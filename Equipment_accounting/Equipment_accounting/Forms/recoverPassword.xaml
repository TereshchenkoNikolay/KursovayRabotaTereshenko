<Window x:Class="Equipment_accounting.recoverPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Equipment_accounting"
        mc:Ignorable="d"
        Title="Восстановление пароля" Height="450" Width="800">
    <Grid>
        <TextBox  Name="EmailForRecoverTxtbox" HorizontalAlignment="Left" Height="23" Margin="260,165,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="155"/>
        <Button Name="sendbutton" Content="Отправить" HorizontalAlignment="Left" Margin="260,220,0,0" VerticalAlignment="Top" Width="75" Click="sendbutton_Click"/>
        <Label Content="Введите Email для восстановления пароля" HorizontalAlignment="Left" Margin="260,130,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
